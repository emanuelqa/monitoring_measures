<div class="mdl-grid">
	<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-offset mdl-cell--4-col mdl-cell--2-offset-tablet">
		<div class="mdl-card__title title">
			<h2 class="mdl-card__title-text">Log in</h2>
		</div>
		<div class="mdl-card__supporting-text">
			<%= form_for(resource, as: :user, url: session_path(:user)) do |f| %>
				<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label tamanho">
				<%= f.label :email, class: "mdl-textfield__label" %>
				<%= f.email_field :email, class: "mdl-textfield__input" %>
				</div>
				<br>
				<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label tamanho">
					<%= f.label :password, class: "mdl-textfield__label" %>
					<%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
				</div>

				<div class="mdl-card__actions">
					<%= f.submit "Log in", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
				</div>
			<% end %>
		</div>
	</div>
</div>