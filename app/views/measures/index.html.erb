<h1>Listing Measures</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Arm</th>
      <th>Waist</th>
      <th>Hip</th>
      <th>Calf</th>
      <th>Thigh</th>
      <th>Weigth</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measures.each do |measure| %>
      <tr>
        <td><%= measure.date %></td>
        <td><%= measure.arm %></td>
        <td><%= measure.waist %></td>
        <td><%= measure.hip %></td>
        <td><%= measure.calf %></td>
        <td><%= measure.thigh %></td>
        <td><%= measure.weigth %></td>
        <td><%= measure.user %></td>
        <td><%= link_to 'Show', measure %></td>
        <td><%= link_to 'Edit', edit_measure_path(measure) %></td>
        <td><%= link_to 'Destroy', measure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

