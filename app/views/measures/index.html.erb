<p id="notice"><%= notice %></p>


<div class="table-responsive">
  <table class="table table-striped table-houve">
    <caption>  <h1>Listing Measures</h1> </caption>
    
    <thead>
      <tr>
        <th>Date</th>
        <th>Arm</th>
        <th>Waist</th>
        <th>Hip</th>
        <th>Calf</th>
        <th>Thigh</th>
        <th>Weigth</th>
        <th>User</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @measures.each do |measure| %>
        <tr>
          <td><%= measure.date %></td>
          <td><%= measure.arm %></td>
          <td><%= measure.waist %></td>
          <td><%= measure.hip %></td>
          <td><%= measure.calf %></td>
          <td><%= measure.thigh %></td>
          <td><%= measure.weigth %></td>
          <td class="text-capitalize"><%= measure.user.name %></td>
          <td>
            <div class="btn-group btn-group-xs">
              <%= link_to 'Show', measure, class: "btn btn-success" %>
              <%= link_to 'Edit', edit_measure_path(measure), class: "btn btn-primary" %>
              <%= link_to 'Destroy', measure, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Measure', new_measure_path, class: "btn btn-primary" %>
